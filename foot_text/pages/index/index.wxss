/**index.wxss**/
.section{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  height: 100rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
  justify-content: center;
}
.section input{
  padding-top:20rpx;
}
.section image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:30%;
  right: 40rpx;
}
swiper{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  vertical-align: middle;
  text-align: center;
  width: 100%;
  height: 300rpx;
}
.slide-image{
  width:90%;
  height:  300rpx;
}
.detail{
  display: flex;
  width: 90%;
  flex-direction: column;
}
.TodayTitle{
  color: gold;
  text-align: center;
  padding: 20rpx;
}
.Today_list{
  box-sizing: border-box;
  flex-direction:row;
  width:750rpx;

}
.Today_list:after{
  content: "";
  display : block;
  clear: both;
}
.todayItem{
   content: "";
  display : block;
  clear: both;
}
.todayItem{
  width: 330rpx;
  height: auto;
  box-sizing: border-box;
  text-align: center;
  display: inline-block;
  background-color: #fff;
  padding-bottom: 0;
  margin-bottom: 15px;
  margin-right: 20rpx;
}
.todayItem image{
  width: 300rpx;
  height: 300rpx;
  padding: 14rpx;
}
.todayItem text{
    color:#ccc;
    text-align: center;
}
.o{
  text-align: center;
  color:#ccc;
  padding: 20rpx;
}