.save_list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.save_item{
  width: 95%;
  box-sizing: border-box;
  height: 300rpx;
  background-color: #Fff;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.save_item image{
  box-sizing: border-box;
  padding: 20rpx 20rpx 0rpx 20rpx;
  width:50%;
  height: 280rpx;
  float: left;
}
.save_content{
  float: left;
  width: 50%;
  height: auto;
  box-sizing: border-box;
   padding: 20rpx 0;
 
}
.save_content rich-text{
  color:#ccc;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.save_content view{
  color:#aaa;
  font-size: 25rpx;
  line-height:50rpx;
  margin-bottom: 20rpx;
}
.save_content text{
  color:#ccc;
  font-size: 30rpx;
  margin-top:rpx;
}